job "splitter" {
  meta {
    backend_image = "pitakill/consul-training-backend"
    backend_version = "3.5"

    frontend_image = "pitakill/consul-training-frontend"
    frontend_version = "3.7"

    database_image = "redis"
    database_version = "alpine"
  }

  datacenters = ["nyc-ncv"]
  region = "nyc-region"
  type = "service"

  group "backend" {
    count = 1

    service {
      name = "backend-splitter"
      port = "backend"
      tags = ["${NOMAD_JOB_NAME}", "${NOMAD_META_backend_image}:${NOMAD_META_backend_version}", "blue"]

      check {
        name     = "backend-health"
        port     = "backend"
        type     = "http"
        protocol = "http"
        path     = "/healthcheck"
        interval = "5s"
        timeout  = "2s"
      }

      meta {
        type = "blue"
      }

      connect {
        sidecar_service {
          proxy {
            upstreams {
              destination_name = "database-splitter"
              local_bind_port = 6379
            }
          }
        }
      }
    }

    network {
      mode = "bridge"

      port "backend" {}
    }

    task "backend" {
      driver = "docker"

      config = {
        image = "${NOMAD_META_backend_image}:${NOMAD_META_backend_version}"
      }

      env {
        PORT = "${NOMAD_PORT_backend}"
      }

      resources = {
        cpu = 50
        memory = 50
      }
    }
  }

  group "database" {
    count = 1

    network {
      mode = "bridge"
    }

    service {
      name = "database-splitter"
      port = 6379
      tags = ["${NOMAD_JOB_NAME}", "${NOMAD_META_database_image}:${NOMAD_META_database_version}"]

      connect {
        sidecar_service {}
      }
    }

    task "database" {
      driver = "docker"

      config {
        image = "${NOMAD_META_database_image}:${NOMAD_META_database_version}"
      }

      resources {
        cpu = 50
        memory = 50
      }
    }
  }

  group "mesh-gateway" {
    count = 1

    task "mesh-gateway" {
      driver = "raw_exec"

      config {
        command = "consul"
        args    = [
          "connect", "envoy",
          "-mesh-gateway",
          "-register",
          "-service", "gateway-secondary",
          "-address", ":${NOMAD_PORT_proxy}",
          "-wan-address", "172.20.20.22:${NOMAD_PORT_proxy}",
          "-admin-bind", "172.20.20.22:19005",
          "-token", "{{env "CONSUL_HTTP_TOKEN"}}",
          "-deregister-after-critical", "5s",
        ]
      }

      resources {
        cpu    = 100
        memory = 100

        network {
          port "proxy" {
            static = 8433
          }
        }
      }
    }
  }
}
